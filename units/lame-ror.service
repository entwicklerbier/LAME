[Unit]
Description=Lame
After=docker.service
After=lame-postgis.service
After=lame-sidekick.service
Requires=docker.service
Requires=lame-postgis.service
Requires=lame-sidekick.service

[Service]
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill lame
ExecStartPre=/usr/bin/docker pull registry.ws.tld/lame
ExecStart=/usr/bin/docker run -rm --name lame lame -D FOREGROUND

ExecStop=/usr/bin/docker stop lame

