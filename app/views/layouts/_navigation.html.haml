%nav.top-bar{"data-topbar" => ""}
  %ul.title-area
    %li.name= link_to 'Home', root_path
    %li.toggle-topbar.menu-icon
      %a{:href => "#"} Menu

  .top-bar-section
    %ul.right
      %li
        - if user_signed_in?
          = link_to 'Profile', edit_user_path(current_user)
        - else
          = link_to 'Register', new_user_registration_path

  .top-bar-section
    %ul.left
      = render 'layouts/navigation_links'
